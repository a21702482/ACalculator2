<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorFragment">

    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:padding="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_historic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:onClick="onClickSymbol"
                    android:tag="8"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:onClick="onClickSymbol"
                    android:tag="9"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_CE"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="CE"
                    android:onClick="onClickDeleteAll"
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_delone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="&lt;"
                    android:onClick="onClickDelLastCharacter"
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_divide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="/"
                    android:onClick="onClickSymbol"
                    android:tag="/"
                    android:textSize="25sp">
                </Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="4"
                    android:text="4"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="5"
                    android:text="5"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="6"
                    android:text="6"
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="7"
                    android:text="7"
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_multi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="*"
                    android:text="*"
                    android:textSize="25sp">
                </Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="1"
                    android:text="1"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="2"
                    android:text="2"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_22"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="22"
                    android:text="22"
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="3"
                    android:text="3"
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_sub"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="-"
                    android:text="-"
                    android:textSize="25sp">
                </Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="0"
                    android:text="0"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_00"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="00"
                    android:text="00"
                    android:textSize="25sp">

                </Button>

                <Button
                    android:id="@+id/button_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="."
                    android:text="."
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_equals"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickEquals"
                    android:text="="
                    android:textSize="25sp">
                </Button>

                <Button
                    android:id="@+id/button_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickSymbol"
                    android:tag="+"
                    android:text="+"
                    android:textSize="25sp">
                </Button>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>